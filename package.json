{
  "name": "qt-log-remover",
  "displayName": "qt-log-remover",
  "publisher": "sanecodeguy",
  "description": "Removes Qt debug logs (qDebug, qWarning, etc.)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "icon": "resources/qt.ico",      
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:qt-log-remover.removeLogs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "qt-log-remover.removeLogs",
        "title": "Remove Qt Logs"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "qt-log-remover.removeLogs",
          "group": "1_modification",
          "when": "editorLangId == cpp"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
